{
    "compilerOptions": {
      "outDir": "build",
      "types": [
        "node"
      ],
      "strict": true,
      "sourceMap": true,
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "skipLibCheck": true,
      "lib": [
        "es6",
        "es7",
        "es2020"
      ],
      "pretty": true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src",
      "test"
    ]
  }